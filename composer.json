{
    "name": "fivelab/authorize-action-bundle",
    "description": "The bundle for integrate the authorize-action library with Symfony application.",
    "keywords": [ "security", "action", "authorize", "authorize action", "symfony"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vitaliy Zhuk",
            "email": "v.zhuk@fivelab.org"
        },

        {
            "name": "FiveLab Team",
            "email": "dev@fivelab.org",
            "homepage": "http://fivelab.org"
        }
    ],

    "require": {
        "php": ">=7.1",
        "sensio/framework-extra-bundle": "~3.0",
        "symfony/property-info": "~3.0",
        "symfony/serializer": "~3.0",
        "symfony/security": "~3.0",
        "fivelab/authorize-action": "~1.0.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "phpmetrics/phpmetrics": "^2.0",
        "escapestudios/symfony2-coding-standard": "~2.0"
    },

    "autoload": {
        "psr-4": { "FiveLab\\Bundle\\AuthorizeActionBundle\\": "src/" }
    },

    "autoload-dev": {
        "psr-4": { "FiveLab\\Bundle\\AuthorizeActionBundle\\Tests\\": "tests/" }
    },

    "config": {
        "bin-dir": "./bin/"
    }
}
